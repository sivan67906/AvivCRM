@model IEnumerable<AvivCRM.UI.Areas.Environment.ViewModels.PlanningVM>;

<div class="modal fade" id="mdlCurrenceyShow">
	<div class="modal-dialog modal-xl" id="PlaceHolderHere">
	</div>
</div>
<div class="row">
	<div class="col-12 col-lg-12">

		<div class="card" style="">

			<div class="card-header">
				<div class="row align-items-center">
					<div class="col">
						<h4 class="card-title">Planning Index</h4>
					</div><!--end col-->
					<div class="col-auto">
						<button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
						        data-target="#mdlCurrenceyShow" data-url="@Url.Action("Create")">
							<i class="fas fa-plus me-2"></i>Add Plan
						</button>
					</div><!--end col-->
				</div> <!--end row-->
			</div><!--end card-header-->
			<div class="card-body">
				<div class="row mb-3">
					<div class="table-responsive">
						<table class="table mb-0">
							<thead class="thead-light">
							<tr>
								<th class="d-none">@Html.DisplayNameFor(m => m.Id)</th>
								<th>Plan Name</th>
								<th>Plan Price</th>
								<th>Validity</th>
								<th>Employee</th>
								<th>Designation</th>
								<th>Department</th>
								<th>Company</th>
								<th>Roles</th>
								<th>Permission</th>
								<th>Action</th>
							</tr>
							</thead>
							<tbody>
							@foreach (var item in Model)
							{
								<tr>

									<td class="d-none">@Html.DisplayFor(modelItem => item.Id)</td>
									<td>@item.Name</td>
									<td>@item.PlanPrice</td>
									<td>@item.Validity</td>
									<td>@item.Employee</td>
									<td>@item.Designation</td>
									<td>@item.Department</td>
									<td>@item.Company</td>
									<td>@item.Roles</td>
									<td>@item.Permission</td>
									<td>
										@* <button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
                            data-target="#mdlProductShow" data-url="@Url.Action($"Edit/{item.Id}")">
                                    <i class="las la-pen text-secondary font-16"></i>
                    </button>
                                <button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
                            data-target="#mdlProductShow" data-url="@Url.Action($"Delete/{item.Id}")">
                                    <i class="las la-trash-alt text-secondary font-16"></i>
                                </button> *@

										<button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
										        data-target="#mdlProductShow" data-url="@Url.Action($"Edit/{item.Id}")">
											<i class="las la-pen text-secondary font-16"></i>
										</button>
										<button type="button" class="btn btn-de-primary" data-toggle="ajax-modal"
										        data-target="#mdlProductShow" data-url="@Url.Action($"Delete/{item.Id}")">
											<i class="las la-trash-alt text-secondary font-16"></i>
										</button>
									</td>
								</tr>
							}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/matrica/assets/js/pages/app-custom.js" type="text/javascript"></script>
	<script type="text/javascript">
        $(window).on('load', function() {
         $('#mdlCurrenceyShow').modal({backdrop: 'static', keyboard: false});
        });
    </script>

}