@section Scripts {
	@* <script src="~/matrica/assets/libs/huebee/huebee.pkgd.min.js"></script> *@
	<script>
		$(document).ready(function () {
		  let hash = document.location.hash;
			var activeTabId = "";

			if(hash)
		  {
			  activeTabId = hash;
		  }
		  else{
			  activeTabId = $(".nav-link.active").attr('href');
		  }
				  $('#ulTicketContainer a[href=' +"'"+ activeTabId +"'"+ ']').ready(function() {
		  // Clear the content of all tab panes
				$('.tab-pane').empty();

				// Load content for the selected tab
				var tabId = $('#ulTicketContainer a[href=' +"'"+ activeTabId +"'"+ ']').attr('href');
				var url = $('#ulTicketContainer a[href=' +"'"+ activeTabId +"'"+ ']').data('url');
				$(tabId).load(url);
		});

		$('#ulTicketContainer a').on('click', function (e) {
				e.preventDefault();

				// Clear the content of all tab panes
				$('.tab-pane').empty();

				// Load content for the selected tab
				var tabId = $(this).attr('href');
				var url = $(this).data('url');
				$(tabId).load(url);
			});
		});
	</script>
}
