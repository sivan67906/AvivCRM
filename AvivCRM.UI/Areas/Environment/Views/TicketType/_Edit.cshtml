@model AvivCRM.UI.Areas.Environment.ViewModels.TicketTypeVM

<div class="modal-content">
	<div class="modal-header">
		<h5 class="modal-title mt-0" Id="">Edit Ticket Type Details</h5>
	</div>
	<div class="modal-body">
		<form id="editFormTicketType" data-url="Edit" asp-action="Edit" method="post">
			<input type="hidden" asp-for="@Model.Id"/>
			<div class="row mt-3">
				<div class="col-lg-12">Source <span class="text-danger">*</span></div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<input asp-for="@Model.Name" class="form-control"/>
					@* <span asp-validation-for="Name" class="text-danger"></span> *@
				</div>
			</div>
			<div class="row mt-4 text-end ">
				<div class="col-lg-12 ">
					<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
					<button type="submit" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Update</button>
				</div>
			</div>
		</form>
	</div>
</div>