@model AvivCRM.UI.Areas.Environment.ViewModels.ProjectStatusVM;

<style type="text/css">
	
</style>
<div class="modal-content">
	<div class="modal-header">
		<h5 class="modal-title mt-0" id="">Project Status Setup</h5>
	</div>
	<div class="modal-body">
		<form asp-action="UpdateProjectStatus" id="UpdateProjectStatus" data-url="Edit" method="post">
			<input id="txtId" type="hidden" name="Id" value="@Model.Id"/>
			<div class="row mt-3">
				<div class="col-lg-7">Name <span class="text-danger">*</span></div>
				<div class="col-lg-3">Label Color</div>
				<div class="col-lg-2"></div>
			</div>
			<div class="row">
				<div class="col-lg-7">
					<input class="form-control" asp-for="@Model.Name" name="Name" type="text" id="txtName">
				</div>
				<div class="col-lg-3">
					<input asp-for="@Model.ColorCode" style="width:100%;" type="color" name="ColorCode" class="form-control form-control-color" id="txtColorCode" title="Choose your color">
				</div>
				<div class="col-lg-2">
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-lg-7">IsDefault</div>
				<div class="col-lg-3">Status</div>
				<div class="col-lg-2"></div>
			</div>
			<div class="row mt-3">
				<div class="col-lg-7">
					<div class="form-check form-switch form-switch-success">
						<input asp-for="IsDefaultStatus" class="form-check-input" name="IsDefaultStatus" type="checkbox" id="ipIsDefaultStatus" style="width: 4em !important; height: 2em !important;">
					</div>
				</div>
				<div class="col-lg-3">
					<div class="form-check form-switch form-switch-success">
						<input asp-for="Status" class="form-check-input" name="Status" type="checkbox" id="ipStatus" style="width: 4em !important; height: 2em !important;">
					</div>
				</div>
				<div class="col-lg-2"></div>
			</div>
			<div class="row mt-4 text-end ">
				<div class="col-lg-12 ">
					<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
					<button type="submit" onclick="" id="btnUpdateProjectStatus" data-save="modal" class="btn btn-sm btn-de-primary"><i class="mdi mdi-check-all me-2"></i>Update</button>
				</div>
			</div>
		</form>
	</div>
</div>