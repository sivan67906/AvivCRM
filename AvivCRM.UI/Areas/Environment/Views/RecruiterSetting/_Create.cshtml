@model AvivCRM.UI.Areas.Environment.ViewModels.RecruiterSettingVM;
<style type="text/css">
	
</style>
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title mt-0" id="myNRSModalLabel">Recruiter Setup</h5>
			@* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
		</div>
		<div class="modal-body">
			<form id="createFormRecruiterSetting" data-url="Create" asp-action="Create" method="post">
				<div class="row mt-2">
					<div class="col-lg-6">Recruiter <span class="text-danger">*</span></div>
				<div class="col-lg-6">Status <span class="text-danger">*</span></div>
				</div>
				<div class="row mt-2">
					<div class="col-lg-6">
						<input asp-for="RecruiterName" class="form-control" />
					</div>
					<div class="col-lg-6">
						<select class="form-select" name="RecruiterStatusId" asp-items="@(new SelectList(Model.ToggleDDSettings!.toggleValues, "Id", "Name"))">
							<option value="">--</option>
						</select>
					</div>
				</div>
				<div class="row mt-4 text-end ">
					<div class="col-lg-12 ">
						<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
						<button type="submit" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Create</button>
					</div>
				</div>
			</form>
		</div>
	</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
