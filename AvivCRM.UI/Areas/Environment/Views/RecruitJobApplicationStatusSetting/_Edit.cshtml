@model AvivCRM.UI.Areas.Environment.ViewModels.RecruitJobApplicationStatusSettingVM;
<style type="text/css">
	
</style>
<div class="modal-content">
	<div class="modal-header">
		<h5 class="modal-title mt-0" id="myEStatusModalLabel">Edit Status Details</h5>
		@* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
	</div>
	<div class="modal-body">
		<form id="editFormRecruitJobApplicationStatusSetting" data-url="Edit" asp-action="Edit" method="post">
			<input type="hidden" asp-for="@Model.Id" />
			<div class="row mt-2">
				<div class="col-lg-6">Category <span class="text-danger">*</span></div>
				<div class="col-lg-6">Status <span class="text-danger">*</span></div>
			</div>
			<div class="row mt-2">
				<div class="col-lg-6">
					<select class="form-select" name="JobApplicationCategoryId" asp-for="@Model.JobApplicationCategoryId" asp-items="@(new SelectList(Model.JobApplicationCategoryDDSetting!.JobApplicationCategoryList, "Id", "JACategoryName"))">
						<option value="">--</option>
					</select>
				</div>
				<div class="col-lg-6">
					<input asp-for="@Model.JASStatus" class="form-control" />
				</div>
			</div>
			<div class="row mt-4">
				<div class="col-lg-6">Label Color <span class="text-danger">*</span></div>
				<div class="col-lg-6">Position</div>
			</div>
			<div class="row mt-2">
				<div class="col-lg-6">
					<input asp-for="@Model.JASColor" type="color" class="form-control" />
				</div>
				<div class="col-lg-6">
					<select class="form-select" name="JobApplicationPositionId" asp-for="@Model.JobApplicationPositionId" asp-items="@(new SelectList(Model.JobApplicationPositionDDSetting!.JobApplicationPositionList, "Id", "JAPositionName"))">
						<option value="">--</option>
					</select>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12 custom-control custom-checkbox mt-2 mb-2">
					<input asp-for="@Model.JASIsModelChecked" type="checkbox" class="form-check-input form-check-input-custom" />
					<label asp-for="@Model.JASIsModelChecked" class="custom-control-label labelcustom">Apply model actions</label>
				</div>
			</div>
			<div class="row mt-4 text-end ">
				<div class="col-lg-12 ">
					<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
					<button type="submit" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Update</button>
				</div>
			</div>
		</form>
	</div>
</div><!-- /.modal-content -->
