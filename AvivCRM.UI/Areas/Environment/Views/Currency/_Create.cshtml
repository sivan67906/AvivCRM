@model AvivCRM.UI.Areas.Environment.ViewModels.CurrencyVM


<div class="modal-content">
	<div class="modal-header">
		<h5 class="modal-title mt-0" id="">Currency Setup</h5>
	</div>
	<div class="modal-body">
		<form id="createFormCurrency" data-url="Create" asp-action="Create" method="post">

			<div class="row">
				<div class="col-md-4 g-2">
					<div class="mb-3 text-start">
						<label for="cname">
							Currency Name
							<span class="f-14 mr-1 text-danger">*</span>
						</label>
						<input class="form-control mt-2" type="text" placeholder="e.g. Doller" name="CurrencyName" id="cname">
						@* <span asp-validation-for="CurrencyName" class="text-danger"></span> *@
					</div>
				</div>
				<div class="col-lg-4 g-2">
					<div class="mb-3 text-start">
						<label for="csymbol">
							Currency Symbol
							<span class="f-14 mr-1 text-danger">*</span>
						</label>
						<input class="form-control mt-2" type="text" placeholder="e.g. $" name="CurrencySymbol" id="csymbol">
						@* <span asp-validation-for="CurrencySymbol" class="text-danger"></span> *@
					</div>
				</div>
				<div class="col-lg-4 g-2">
					<div class="mb-3 text-start">
						<label for="ccode">
							Currency Code
							<span class="f-14 mr-1 text-danger">*</span>
						</label>
						<input class="form-control mt-2" type="text" placeholder="e.g. USD" name="CurrencyCode" id="ccode">
						@* <span asp-validation-for="CurrencyCode" class="text-danger"></span> *@
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-6 g-2">
					<div class="mb-3 text-start">
						<label for="tax">Is Cryptocurrency</label>
						<div class="col-sm-7 text-start mt-2">
							<div class="form-check form-check-inline">
								<input class="form-check-input" type="radio" name="IsCryptocurrency" id="icc1" value="1">
								<label class="form-check-label" for="icc1">Yes</label>
							</div>
							<div class="form-check form-check-inline">
								<input class="form-check-input" type="radio" name="IsCryptocurrency" id="icc2" value="0">
								<label class="form-check-label" for="icc2">No</label>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-6 g-2" id="yestextbox" style="display: none;">
					<div class="mb-3 text-start">
						<label for="usdprice">USD Price<span class="f-14 mr-1 text-danger">*</span></label>
						<input class="form-control mt-2" type="text" placeholder="e.g. 100000" name="USDPrice" id="usdprice">
					</div>
				</div>
				<div class="col-lg-6 g-2" id="notextbox" style="display: none;">
					<div class="mb-3 text-start">
						<label for="exchangerate">Exchange Rate<span class="f-14 mr-1 text-danger">*</span></label>
						<input class="form-control mt-2" type="number" placeholder="e.g. 10000" name="ExchangeRate" id="exchangerate">
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-12 text-start">
					<h6>Currency Format Settings</h6>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-6 g-2">
					<div class="mb-3 text-start">
						<label for="cposition">
							Currency Position
						</label>
						<select class="form-select mt-2" id="cposition" name="CurrencyPosition" aria-label="Default select example">
							<option value="" selected>--</option>
							<option value="1">Left</option>
							<option value="2">Right</option>
							<option value="3">Left with Space</option>
							<option value="4">Right with Space</option>
						</select>
						@* <span asp-validation-for="CurrencyPosition" class="text-danger"></span> *@
					</div>
				</div>
				<div class="col-lg-6 g-2">
					<div class="mb-3 text-start">
						<label for="sep">
							Thousand Separator
						</label>
						<input class="form-control mt-2" type="text" placeholder="" value="" name="ThousandSeparator" id="sep">
						<span asp-validation-for="ThousandSeparator" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-6 g-2">
					<div class="mb-3 text-start">
						<label for="dsep">
							Decimal Separator
						</label>
						<input class="form-control mt-2" type="text" placeholder="" value="" name="DecimalSeparator" id="dsep">
						<span asp-validation-for="DecimalSeparator" class="text-danger"></span>
					</div>
				</div>
				<div class="col-lg-6 g-2">
					<div class="mb-3 text-start">
						<label for="ndecimal">
							Number of Decimals
						</label>
						<input class="form-control mt-2" type="number" placeholder="" value="" name="NumberofDecimals" id="ndecimal">
						<span asp-validation-for="NumberofDecimals" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row mt-4 text-end ">
				<div class="col-lg-12 ">
					<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
					<button type="submit" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Create</button>
				</div>
			</div>
		</form>
	</div>
</div>

