@model AvivCRM.UI.Areas.Environment.ViewModels.RecruitFooterSettingVM;
<style type="text/css">
	
</style>
<div class="modal-content">
	<div class="modal-header">
		<h5 class="modal-title mt-0" id="myEFLModalLabel">Edit Footer Link Details</h5>
		@* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
	</div>
	<div class="modal-body">
			<form id="editFormTicketAgent" data-url="Edit" asp-action="Edit" method="post">
			<input type="hidden" asp-for="@Model.Id" />
			<div class="row mt-3 mb-2">
				<div class="col-lg-4">Title <span class="text-danger">*</span></div>
				<div class="col-lg-4">Slug <span class="text-danger">*</span></div>
				<div class="col-lg-4">Status</div>
			</div>
			<div class="row mt-3 mb-2">
				<div class="col-lg-4">
					<input asp-for="@Model.FooterTitle" class="form-control" />
				</div>
				<div class="col-lg-4">
					<input asp-for="@Model.FooterSlug" class="form-control" />
				</div>
				<div class="col-lg-4">
					<select class="form-select" name="FooterStatusId" asp-for="@Model.FooterStatusId" asp-items="@(new SelectList(Model.ToggleDDSettings!.toggleValues, "Id", "Name"))">
						<option value="">--</option>
					</select>
					@* <select asp-for="SelectedValue" asp-items="Model.Options" id="dropdown"></select> *@
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-lg-12">Description</div>
			</div>
			<div class="row mb-2">
				<div class="col-lg-12">
					<div class="row">
						<div class="col-lg-12">
							@* <textarea id="txtfooterDescription">Hello, World!</textarea> *@
							<textarea asp-for="FooterDescription" class="form-control" placeholder="" rows="5" id=""></textarea>
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-4 text-end ">
				<div class="col-lg-12 ">
					<button type="button" class="btn btn-sm btn-de-danger me-2" data-bs-dismiss="modal"><i class="mdi mdi-window-close me-2"></i>Close</button>
					<button type="submit" class="btn btn-sm btn-de-primary" data-save="modal"><i class="mdi mdi-check-all me-2"></i>Update</button>
				</div>
			</div>
		</form>
	</div>
</div><!-- /.modal-content -->
